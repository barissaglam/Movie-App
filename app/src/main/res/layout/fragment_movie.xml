<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vm"
            type="barissaglam.client.movieapp.presentation.movies.MoviesViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:fillViewport="true"
            android:paddingTop="@dimen/margin_16dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <barissaglam.client.movieapp.view.BaseView
                android:id="@+id/baseView"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <barissaglam.client.movieapp.view.WrapContentViewPager
                    android:id="@+id/viewPagerNowPlayingMovies"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:paddingStart="60dp"
                    android:paddingEnd="60dp"
                    app:layout_constraintTop_toTopOf="parent" />

                <include
                    android:id="@+id/layoutPopularMovies"
                    layout="@layout/layout_movie_view_pager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_16dp"
                    app:layout_constraintTop_toBottomOf="@id/viewPagerNowPlayingMovies"
                    app:title="@{vm.liveDataViewState_.popularMoviesViewPagerTitle}"
                    app:visibility="@{true}" />

                <include
                    android:id="@+id/layoutUpComingMovies"
                    layout="@layout/layout_movie_view_pager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_16dp"
                    app:layout_constraintTop_toBottomOf="@id/layoutPopularMovies"
                    app:title="@{vm.liveDataViewState_.upComingMoviesViewPagerTitle}"
                    app:visibility="@{true}" />

            </barissaglam.client.movieapp.view.BaseView>
        </androidx.core.widget.NestedScrollView>

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16dp"
            android:background="@android:color/transparent"
            android:elevation="0dp"
            app:elevation="0dp">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentInsetStart="0dp"
                android:contentInsetLeft="0dp"
                android:gravity="center"
                app:contentInsetLeft="0dp"
                app:contentInsetStart="0dp"
                app:layout_scrollFlags="scroll|enterAlways">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewToolbarContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_16dp"
                    android:layout_marginEnd="@dimen/margin_16dp"
                    android:transitionName="@string/transition_from_home_to_search"
                    app:cardBackgroundColor="@color/colorHelper"
                    app:cardCornerRadius="@dimen/margin_8dp"
                    app:cardElevation="1dp"
                    app:cardUseCompatPadding="true">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constraintLayoutToolbarContent"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:focusableInTouchMode="true">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/imageViewLogo"
                            android:layout_width="@dimen/toolbarLogoSize"
                            android:layout_height="48dp"
                            android:layout_marginStart="@dimen/margin_8dp"
                            android:padding="@dimen/toolbarLogoPadding"
                            android:src="@drawable/logo"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:tint="@color/white" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/textViewTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Movie App"
                            android:textColor="@color/gray9ba0a6"
                            android:textSize="@dimen/textSizeMedium"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/imageButtonSearch"
                            app:layout_constraintStart_toEndOf="@id/imageViewLogo"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageButton
                            android:id="@+id/imageButtonSearch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/margin_8dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:padding="@dimen/padding_8dp"
                            android:src="@drawable/ic_search_black_24dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>